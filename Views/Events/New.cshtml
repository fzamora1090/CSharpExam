@model Event

<div class="container">
    <h1> Make new Event</h1>
    <form asp-controller="Events" asp-action="Create">

        <div class="row">
            <div class="form-group col">
                <span class="text-danger" asp-validation-for="Title"></span>
                <label asp-for="Title">Title</label>
                <input type="text" class="form-control" asp-for="Title" placeholder="Title">
            </div>

            <div class="form-group col">
                <span class="text-danger" asp-validation-for="Time"></span>
                <label asp-for="Time">Time</label>
                <input type="text" class="form-control" asp-for="Time" placeholder="Time">
            </div>
        </div>
        
        <div class="row">
            <div class="form-group col">
                <span class="text-danger" asp-validation-for="Date"></span>
                <label asp-for="Date">Date</label>
                <input type="date" class="form-control" asp-for="Date" placeholder="Date">
            </div>
            
            <div class="form-group col">
                <span class="text-danger" asp-validation-for="Duration"></span>
                <label asp-for="Duration">Duration</label>
                <input type="text" class="form-control input-group mb-3" asp-for="Duration" placeholder="Duration">
                <select class="input-group-append" asp-for="Duration"> 
                    <option asp-for="Duration">Minutes</option>
                    <option asp-for="Duration">Hours</option>
                    <option asp-for="Duration">Days</option>
                </select>
            </div>
        </div>
        
        <div class="form-group">
            <div class="input-group">
                <span class="text-danger" asp-validation-for="Description"></span>
                <!-- <label asp-for="Description">Description</label> -->
                <textarea class="form-control" aria-label="With textarea" asp-for="Description" placeholder="Description"></textarea>
            </div>
        </div>
       
        <button type="submit" class="btn btn-md btn-primary">Submit</button>
    </form>
</div>